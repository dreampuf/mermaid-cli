{
  "name": "mermaid-it-wasm",
  "version": "0.1.0",
  "description": "WASM bindings for rendering Mermaid diagrams",
  "main": "pkg/mermaid_it_wasm.js",
  "types": "pkg/mermaid_it_wasm.d.ts",
  "files": [
    "pkg/**/*",
    "examples/**/*"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build:node": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg-bundler",
    "test": "wasm-pack test --node",
    "example": "cd examples && npm start"
  },
  "keywords": [
    "mermaid",
    "diagram",
    "visualization",
    "wasm",
    "webassembly",
    "svg",
    "png"
  ],
  "author": "drempuf <soddyque@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mermaid-it"
  },
  "devDependencies": {
    "wasm-pack": "^0.12.0"
  }
}